extends layout

block content
    .container
        h1 Register Free Your Account

        if error
            p Erro: #{error}

        form(action="/users/register" method="POST")
            label Username: 
            br
            input(type="text", name='username', required)
            br
        
            label Email: 
            br
            input(type="email", name='email', required)
            br

            label Password
            br
            input(type="password", name="password")

            br
            input(type='submit')